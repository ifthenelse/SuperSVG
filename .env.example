# SuperSVG Docker Configuration
# Copy to .env and customize as needed

# Data Configuration
DATA_PATH=./input
OUTPUT_PATH=./output_coarse
LOGS_PATH=./logs
CHECKPOINTS_PATH=./checkpoints

# Training Parameters
NUM_EPOCHS=100
BATCH_SIZE=32
LEARNING_RATE=0.001

# GPU Configuration
# Set CUDA device (e.g., 0 for first GPU, empty for CPU-only)
CUDA_VISIBLE_DEVICES=0

# Docker Configuration
DOCKER_MEMORY=16g
DOCKER_CPUS=0.0

# Environment
PYTHONPATH=/workspace
